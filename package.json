{
  "name": "TerminalShop",
  "displayName": "terminal-shop",
  "description": "A coffee shop inspired by Terminal.shop",
  "publisher": "TerminalShop",
  "icon": "media/ext-logo.png",
  "version": "0.0.3",
  "engines": {
    "vscode": "^1.98.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "terminal-shop.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "addressView.selectAddress",
        "title": "Select Address"
      },
      {
        "command": "cardView.selectCard",
        "title": "Select Card"
      },
      {
        "command": "orderHistory.trackPackage",
        "title": "Track"
      },
      {
        "command": "addressView.addAddress",
        "title": "Add new address",
        "icon": "$(add)"
      },
      {
        "command": "addressView.refresh",
        "title": "Refresh",
        "icon": "$(refresh)"
      },
      {
        "command": "addressView.delete",
        "title": "Delete",
        "icon": "$(trash)"
      },
      {
        "command": "cardView.addCard",
        "title": "Add new Card",
        "icon": "$(add)"
      },
      {
        "command": "cardView.refresh",
        "title": "Refresh",
        "icon": "$(refresh)"
      },
      {
        "command": "cardView.delete",
        "title": "Delete",
        "icon": "$(trash)"
      },
      {
        "command": "productView.removeFromCart",
        "title": "Remove from Cart",
        "icon": "$(remove)"
      },
      {
        "command": "productView.addToCart",
        "title": "Add to Cart",
        "icon": "$(add)"
      }
    ],
    "menus": {
      "view/item/context": [
        {
          "command": "orderHistory.trackPackage",
          "when": "view == orderView && viewItem == order",
          "group": "inline"
        },
        {
          "command": "addressView.delete",
          "when": "view == addressView && viewItem == address",
          "group": "inline"
        },
        {
          "command": "cardView.delete",
          "when": "view == cardView && viewItem == card",
          "group": "inline"
        },
        {
          "command": "productView.removeFromCart",
          "when": "view == productView && viewItem == product",
          "group": "inline"
        },
        {
          "command": "productView.addToCart",
          "when": "view == productView && viewItem == product",
          "group": "inline"
        }
      ],
      "view/title": [
        {
          "command": "addressView.addAddress",
          "when": "view == addressView",
          "group": "navigation"
        },
        {
          "command": "addressView.refresh",
          "when": "view == addressView",
          "group": "navigation"
        },
        {
          "command": "cardView.addCard",
          "when": "view == cardView",
          "group": "navigation"
        },
        {
          "command": "cardView.refresh",
          "when": "view == cardView",
          "group": "navigation"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "coffeeActivity",
          "title": "Coffee Shop",
          "icon": "media/coffee.svg"
        }
      ]
    },
    "views": {
      "coffeeActivity": [
        {
          "id": "productView",
          "name": "Products"
        },
        {
          "id": "addressView",
          "name": "üìç Registered Addresses (Required)"
        },
        {
          "id": "cardView",
          "name": "üí≥ Registered Cards (Required)"
        },
        {
          "id": "orderView",
          "name": "üì¨ Order History (Zero indexed btw)"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "addressView",
        "contents": "In order to use order coffee you need to register a shipping address.\n[Add new address](command:addressView.addAddress)"
      },
      {
        "view": "cardView",
        "contents": "In order to use order coffee you need to register a credit/debit card\n[Add new card](command:cardView.addCard)"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.98.0",
    "@typescript-eslint/eslint-plugin": "^8.25.0",
    "@typescript-eslint/parser": "^8.25.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.21.0",
    "ts-loader": "^9.5.2",
    "typescript": "^5.7.3",
    "webpack": "^5.98.0",
    "webpack-cli": "^6.0.1"
  },
  "dependencies": {
    "@terminaldotshop/sdk": "^1.11.0",
    "dotenv": "^16.4.7"
  },
  "repository": "https://github.com/SergSpice/terminaldotshop"
}
