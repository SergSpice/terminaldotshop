{
  "name": "terminal-shop",
  "displayName": "terminal-shop",
  "description": "A coffee shop inspired by Terminal.shop",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.98.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "terminal-shop.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "addressView.selectAddress",
        "title": "Select Address"
      },
      {
        "command": "cardView.selectCard",
        "title": "Select Card"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "coffeeActivity",
          "title": "Coffee Shop",
          "icon": "media/coffee.svg"
        }
      ]
    },
    "views": {
      "coffeeActivity": [
        {
          "id": "productView",
          "name": "Products"
        },
        {
          "id": "addressView",
          "name": "Registered Addresses (Select One)"
        },
        {
          "id": "cardView",
          "name": "Registered Cards (Select One)"
        },
        {
          "id": "orderView",
          "name": "Order History"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.98.0",
    "@typescript-eslint/eslint-plugin": "^8.25.0",
    "@typescript-eslint/parser": "^8.25.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.21.0",
    "ts-loader": "^9.5.2",
    "typescript": "^5.7.3",
    "webpack": "^5.98.0",
    "webpack-cli": "^6.0.1"
  },
  "dependencies": {
    "@terminaldotshop/sdk": "^1.6.0",
    "dotenv": "^16.4.7"
  }
}
